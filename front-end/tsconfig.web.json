{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "node_modules/@prisma/client",
    "src/shared/**/*",
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.vue",
    "src/tests/renderer"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/*"],
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"]
    }
  }
}
