{
  "name": "hedera-transaction-tool",
  "version": "0.2.5-beta.6",
  "description": "Transaction tool application",
  "author": {
    "name": "LimeChain",
    "url": "https://github.com/LimeChain"
  },
  "repository": "https://github.com/LimeChain/hedera-transaction-tool-release",
  "type": "module",
  "main": "packages/main/dist/index.js",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config electron-builder.yml --dir --config.asar=false",
    "build:mac": "cross-env MODE=production npm run build && electron-builder --mac",
    "build:cross": "cross-env MODE=production npm run build && electron-builder",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:ui:coverage": "vitest --ui --coverage.enabled=true",
    "test:e2e": "npm run test --project e2e",
    "test:main": "npm run test --project main --passWithNoTests",
    "test:preload": "npm run test --project preload --passWithNoTests",
    "test:renderer": "npm run test --project renderer --passWithNoTests",
    "dev": "node scripts/watch.js",
    "devTools": "./node_modules/.bin/vue-devtools",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,vue",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.js && electron-builder install-app-deps",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,vue,json}\"",
    "publish": "npm run build && electron-builder -m -p 'onTagOrDraft'"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/bootstrap": "^5.2.10",
    "@types/long": "^5.0.0",
    "@types/node": "20.11.19",
    "@typescript-eslint/eslint-plugin": "7.0.2",
    "@vitejs/plugin-vue": "5.0.4",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "@vue/devtools": "^6.6.1",
    "@vue/test-utils": "2.4.4",
    "cross-env": "7.0.3",
    "electron": "28.2.3",
    "electron-builder": "24.9.1",
    "eslint": "8.56.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "9.21.1",
    "happy-dom": "13.3.8",
    "nano-staged": "0.8.0",
    "playwright": "1.41.2",
    "prisma": "^5.9.1",
    "sass": "^1.71.0",
    "simple-git-hooks": "2.9.0",
    "typescript": "5.3.3",
    "unplugin-auto-expose": "0.3.0",
    "vite": "5.1.4",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "1.3.1",
    "vue": "3.4.19",
    "vue-tsc": "1.8.27"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@hashgraph/sdk": "^2.42.0-beta.3",
    "@prisma/client": "^5.9.1",
    "axios": "^1.6.7",
    "better-sqlite3": "^9.4.1",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.3",
    "electron-log": "^5.1.1",
    "electron-store": "^8.1.0",
    "electron-updater": "6.1.7",
    "jwt-decode": "^4.0.0",
    "pinia": "^2.1.7",
    "vue-router": "^4.2.5",
    "vue-toast-notification": "^3.1.2"
  }
}
