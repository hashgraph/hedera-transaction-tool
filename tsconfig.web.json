{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "node_modules/@prisma/client",
    "src/main/shared",
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.vue",
    "src/tests/renderer"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/*"
      ],
      "@main/*": [
        "src/main/*"
      ]
    }
  }
}
