{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["vite.config.*", "src/main", "src/preload/", "src/tests/main"],
  "compilerOptions": {
    "composite": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@main/*": [
        "src/main/*"
      ]
    }
  }
}
